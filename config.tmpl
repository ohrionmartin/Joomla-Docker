# YOUR CONFIG OPTIONS

### DOCKER ###########################################
docker.host.ip=127.0.0.1
# switch to build/pull these images
docker.php=1
docker.joomla=1

### WEBSITE CONTAINER #################################
# the container main domain
container.website.domain=vdm
# the generic website name
container.website.websitename="Joomla Testing Website"
# the generic name of a user
container.website.uname=Tester
# the generic useruser
container.website.username=tester
# the generic user password
container.website.websiteuserpass=vastdevelopmentmethod
# the generic user and site email
container.website.email="tester@email.com"
# the database generic settings
container.website.dbdriver=mysqli
container.website.dbhost=mysql
container.website.dbuser=vdm
container.website.dbpass=vastdevelopmentmethod
container.website.dbrootpass=vastdevelopmentmethod
container.website.dbname=joomla
container.website.dbprefix=vdm
container.website.smtphost=mailcatcher

### JOOMLA BASE ######################################
# 1 is true and 0 is false
joomla.image.pull=1
# default "JOOMLA4.0.0-beta4"
joomla.image.docker.folder=JOOMLA4.0.0-beta4
# default "vdmio/joomla"
joomla.image.docker.name=vdmio/joomla
# default "4.0.0-beta4"
joomla.image.docker.tag.name=4.0.0-beta4

### PHP IMAGE #########################################
# 1 is true and 0 is false
php.image.pull=1
# default "PHP7.4"
php.image.docker.folder=PHP7.4
# default "vdmio/php"
php.image.docker.name=vdmio/php
# default "7.4-apache-node12"
php.image.docker.tag.name=7.4-apache-node12